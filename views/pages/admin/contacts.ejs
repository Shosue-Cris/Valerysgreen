

<div class="container">
  <h1>Contactos Recibidos</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo Electrónico</th>
        <th>Comentario</th>
        <th>IP</th>
        <th>Fecha</th>
      </tr>
    </thead>
    <tbody>
      <% if (contacts && contacts.length > 0) { %>
        <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.id %></td>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.comment %></td>
            <td><%= contact.ip %></td>
            <td><%= contact.timestamp %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6">No hay contactos registrados.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<style>
  .container {
    max-width: 960px; /* Ajusta el ancho según necesites */
    margin: 0 auto;
    padding: 20px;
    background: #fff;
    box-shadow: var(--sombra, 0 5px 15px rgba(0,0,0,0.1));
    border-radius: var(--borde-radius, 12px);
  }

  h1 {
    text-align: center;
    color: var(--gris-oscuro, #2c3e50);
    margin-bottom: 20px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th, td {
    padding: 12px;
    border: 1px solid #ccc;
    text-align: left;
  }

  th {
    background-color: #28a745; /* Tu color verde principal */
    color: white;
    font-weight: bold;
  }

  tbody tr:nth-child(even) {
    background-color: #f2f2f2; /* Un color para filas alternas */
  }
</style>